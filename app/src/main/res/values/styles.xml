<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAppThem" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>    //给appbar上色
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>   //状态栏颜色
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>   //窗口背景色
    </style>

    <style name="MyDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="LogDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="batterydialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="mytblayoutstyle" parent="Widget.Design.TabLayout">
        <item name="android:textAllCaps">false</item>
        </style>
</resources>
